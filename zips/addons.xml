<?xml version="1.0" encoding="UTF-8"?>
<addons>

  <!-- Your wizard -->
  <addon id="plugin.program.netklixwizard" name="NetKlix Wizard" version="1.0.1" provider-name="inevitable-">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py"/>
    <extension point="xbmc.addon.metadata">
      <summary>NetKlix Wizard</summary>
      <description>Downloads and installs the NetKlix Lite Build automatically.</description>
      <platform>all</platform>
      <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>

  <!-- Your repository definition that points to RAW /zips/ -->
  <addon id="repository.netklix" name="NetKlix Repo" version="1.0.1" provider-name="inevitable-">
    <extension point="xbmc.addon.repository" name="NetKlix Repo">
      <dir>
        <info compressed="false">https://raw.githubusercontent.com/inevitable-/netklix-builds/main/zips/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/inevitable-/netklix-builds/main/zips/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/inevitable-/netklix-builds/main/zips/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>NetKlix Repository</summary>
      <description>Install NetKlix Wizard and other add-ons</description>
      <platform>all</platform>
      <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>

</addons>